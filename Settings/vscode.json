{
  /* Editor */
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.accessibilitySupport": "off",
  "editor.autoIndent": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line",
  "editor.detectIndentation": true,
  "editor.dragAndDrop": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.hideCursorInOverviewRuler": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.side": "left",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.overviewRulerBorder": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollBeyondLastColumn": 0,
  "editor.showFoldingControls": "always",
  "editor.stablePeek": true,
  "editor.tabCompletion": true,
  "editor.tabSize": 2,
  "editor.useTabStops": true,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",

  /* Explorer */
  "explorer.autoReveal": true,

  /* Extension Sidebar */
  "extensions.showRecommendationsOnlyOnDemand": true,

  /* Files */
  "files.encoding": "utf8",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/**/*.pyc": true,
    "**/CVS": true,
    "node_modules": true,
    ".cache": true,
    ".vscode": true
  },
  "files.hotExit": "onExitAndWindowClose",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.useExperimentalFileWatcher": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },

  /* Git */
  "git.confirmSync": true,
  "git.enabled": true,

  /* HTML */
  "html.suggest.angular1": false,

  /* Javascript */
  "javascript.preferences.quoteStyle": "single",

  /* npm */
  "npm.packageManager": "yarn",

  /* SCSS */
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.float": "warning",
  "scss.lint.universalSelector": "warning",
  "scss.lint.zeroUnits": "error",
  "scss.lint.boxModel": "warning",

  /* Search */
  "search.exclude": {
    "**/.git": true,
    "**/bower_components": true,
    "**/node_modules": true
  },
  "search.smartCase": true,
  "searchrg.enable": true,

  /* Telemetry */
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  /* Terminal */
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.lineHeight": 0,
  "terminal.integrated.scrollback": 65535,

  /* Window */
  "window.nativeTabs": true,
  "window.openFoldersInNewWindow": "off",
  "window.restoreWindows": "all",
  "window.title": "${activeEditorMedium}${separator}${rootName}${separator}${rootPath}",
  "window.zoomLevel": 0,

  /* Workbench */
  "workbench.colorTheme": "Ayu Light",
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.closeOnFileDelete": false,
  "workbench.editor.labelFormat": "medium",
  "workbench.editor.swipeToNavigate": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": "ayu",
  "workbench.startupEditor": "none",
  "workbench.statusBar.feedback.visible": false,

  /* ZenMode */
  "zenMode.hideActivityBar": false,
  "zenMode.hideTabs": false,
  "zenMode.restore": true,

  /* Markdown-only */
  "[markdown]": {
    "editor.tabSize": 4,
    "editor.quickSuggestions": false,
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": false,
  },

  /* Python-only */
  "[python]": {
    "editor.insertSpaces": true,
  },

  /* Extensions */
  /* Gitlens */
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitDisabledWarning": true,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.scopes": ["containers", "blocks"],
  "gitlens.currentLine.format": "${authorAgoOrDate} â€¢ ${id}",
  "gitlens.currentLine.scrollable": false,
  "gitlens.historyExplorer.enabled": true,
  "gitlens.keymap": "chorded",
  "gitlens.statusBar.reduceFlicker": true,

  /* LaTeX */
  "latex-workshop.chktex.enabled": false,
  "latex-workshop.latex.clean.enabled": true,
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux", "*.bbl", "*.blg", "*.idx", "*.ind", "*.lof",
    "*.lot", "*.out", "*.toc", "*.acn", "*.acr", "*.alg",
    "*.glg", "*.glo", "*.gls", "*.ist", "*.fls", "*.log",
    "*.fdb_latexmk", "*.synctex.gz",
  ],
  "latex-workshop.view.pdf.viewer": "tab",

  /* Live Share */
  "liveshare.diagnosticLogging": false,
  "liveshare.features": "stable",
  "liveshare.guestApprovalRequired": true,

  /* Path-Intellisense */
  "path-intellisense.autoSlashAfterDirectory": true,

  /* Python */
  "python.autoComplete.preloadModules": [
    "numpy"
  ],
  "python.formatting.provider": "none",
  "python.linting.maxNumberOfProblems": 255,
  "python.pythonPath": "/usr/local/bin/python3",
}
